<%  provide :title, 'Create Playlist' %>

<div class="row new-playlist">
  <div class="large-8 columns">
    <h3>Welcome to Wemote.</h3>
    <%= render 'shared/error_messages', record: @playlist %>
    <%= form_for(@playlist) do |f| %>
        <%= f.text_field :name, placeholder: "Enter a name for your new playlist" %>
        <%= f.submit "Create Playlist", class: "button" %>
    <% end %>
  </div>
  <div class="large-4 columns">
    <h6>Playlists you've hosted:</h6>
    <% @past_playlists_played.each do |p| %>
      <%= link_to p.name, playlist_path(p.id), "data-no-turbolink" => true %><br>
    <% end %>
    <br><br>
    <h6>Playlists you've added music to:</h6>
    <% @past_playlists_searched.each do |p| %>
      <%= link_to p.name, search_playlist_path(p.id), "data-no-turbolink" => true %><br>
    <% end %>
  </div>
</div>